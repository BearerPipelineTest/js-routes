 {
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true

  },
  "ts-node": {
    "files": true,
    "transpileOnly": false
  },
  "include": ["lib/*.ts"]
}
